    <filter>
        <description>Set cache expiry for static content</description>
        <filter-name>ExpiresFilter</filter-name>
        <filter-class>com.dalogin.filters.RohadekFilter</filter-class>
        <init-param>
            <param-name>ExpiresByType text/html</param-name>
            <param-value>now</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>ExpiresFilter</filter-name>
        <url-pattern>/login/*</url-pattern>
        <url-pattern>/example/*</url-pattern>
        <url-pattern>/mbook-1/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <filter>
        <filter-name>XssFilter</filter-name>
        <filter-class>com.dalogin.filters.XssFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>XssFilter</filter-name>
        <url-pattern>/login/*</url-pattern>
        <url-pattern>/example/*</url-pattern>
        <url-pattern>/mbook-1/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>HSTSFilter</filter-name>
        <filter-class>com.dalogin.filters.HSTSFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>HSTSFilter</filter-name>
        <url-pattern>/login/*</url-pattern>
        <url-pattern>/example/*</url-pattern>
        <url-pattern>/mbook-1/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.dalogin.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HelloWorld</servlet-name>
        <servlet-class>com.dalogin.HelloWorld</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloWorld</servlet-name>
        <url-pattern>/HelloWorld</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>com.dalogin.Registration</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Voucher</servlet-name>
        <servlet-class>com.dalogin.Voucher</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Voucher</servlet-name>
        <url-pattern>/voucher</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Loggingout</servlet-name>
        <servlet-class>com.dalogin.Loggingout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Loggingout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegActivation</servlet-name>
        <servlet-class>com.dalogin.RegActivation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegActivation</servlet-name>
        <url-pattern>/activation</url-pattern>
    </servlet-mapping>
    <description>MySQL Test App</description>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/TestDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
