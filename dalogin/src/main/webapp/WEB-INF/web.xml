    <session-config>
        <cookie-config>
            <http-only>true</http-only>
            <secure>true</secure>
        </cookie-config>
    </session-config>
        <servlet>
            <servlet-name>ExceptionHandler</servlet-name>
            <servlet-class>com.dalogin.ExceptionHandler</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>ExceptionHandler</servlet-name>
            <url-pattern>/ExceptionHandler</url-pattern>
        </servlet-mapping>
        <error-page>
            <error-code>404</error-code>
            <location>/ExceptionHandler</location>
        </error-page>
        <error-page>
            <exception-type>java.lang.Throwable</exception-type>
            <location>/ExceptionHandler</location>
        </error-page>
</web-app>
